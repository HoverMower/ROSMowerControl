<mvc:View controllerName="rosmower.ROSMowerControl.controller.MainView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">

                    <OverflowToolbar id="otbFooter">
                        <ToggleButton icon="sap-icon://sys-cancel-2" type="Reject" text="KILL SWITCH" pressed="{ROS>/ROS/subscribers/e_stop/data/0/data}" />
                        <ToolbarSpacer />
                        <Button icon="sap-icon://alert" text="{= ${ROS>/ROS/subscribers/rosout/data}.length }" type="Emphasized" press="onMessagePopoverPress"></Button>

                    </OverflowToolbar>


                </Page>
            </pages>

        </App>
    </Shell>
</mvc:View>