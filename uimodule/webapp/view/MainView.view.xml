<mvc:View controllerName="rosmower.ROSMowerControl.controller.MainView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <ToggleButton icon="sap-icon://sys-cancel-2" type="Reject" text="KILL SWITCH" pressed="{ROS>/ROS/subscribers/e_stop/data/0/data}" />
                    <List headerText="{i18n>rosout}" items="{path: 'ROS>/ROS/subscribers/rosout/data'}">
                        <StandardListItem title="{ROS>msg}" />
                    </List>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>